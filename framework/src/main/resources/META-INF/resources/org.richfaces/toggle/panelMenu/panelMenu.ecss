.rf-pm-hdr-exp {
    border-top-left-radius: '#{richSkin.panelBorderRadius}';
    border-top-right-radius: '#{richSkin.panelBorderRadius}';
}

.rf-pm-hdr-exp .rf-pm-ico-exp {
    display: block;
}

.rf-pm-hdr-exp .rf-pm-ico-colps {
    display: none;
}

.rf-pm-hdr-colps {
