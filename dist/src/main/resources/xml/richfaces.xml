<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.1 http://maven.apache.org/xsd/assembly-2.2.1.xsd">
    <id>richfaces</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <!-- readmes and release-notes -->
        <fileSet>
            <directory>src/main/resources/txt</directory>
            <outputDirectory></outputDirectory>
        </fileSet>

        <!-- docs-->
        <fileSet>
            <directory>target/site</directory>
            <outputDirectory>doc</outputDirectory>
        </fileSet>

        <!-- docs-->
        <fileSet>
            <directory>target/examples</directory>
            <outputDirectory>examples</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <!-- RichFaces jars -->
        <dependencySet>
            <includes>
                <include>org.richfaces:richfaces:jar:${project.version}</include>
                <include>org.richfaces:richfaces:jar:sources:4.5.0-SNAPSHOT</include>
            </includes>
            <outputFileNameMapping>richfaces-components-rich-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.richfaces:richfaces-a4j:jar:${project.version}</include>
                <include>org.richfaces:richfaces-a4j:jar:sources:4.5.0-SNAPSHOT</include>
            </includes>
            <outputFileNameMapping>richfaces-components-a4j-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.richfaces:richfaces-core:jar:${project.version}</include>
                <include>org.richfaces:richfaces-core:jar:sources:4.5.0-SNAPSHOT</include>
            </includes>
        </dependencySet>

        <!-- Dependency jars -->
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>net.sourceforge.cssparser</include>
                <include>org.w3c.css</include>
                <include>com.google.guava</include>
                <include>org.richfaces:richfaces-page-fragments</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib/push</outputDirectory>
            <includes>
                <include>org.atmosphere</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>lib/cache</outputDirectory>
            <includes>
                <include>net.sf.ehcache</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
